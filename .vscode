#!/usr/bin/env pybricks-micropython
from pybricks.hubs import EV3Brick
from pybricks.ev3devices import (Motor, TouchSensor, ColorSensor,
                                 InfraredSensor, UltrasonicSensor, GyroSensor)
from pybricks.parameters import Port, Stop, Direction, Button, Color
from pybricks.tools import wait, StopWatch, DataLog
from pybricks.robotics import DriveBase
from pybricks.media.ev3dev import SoundFile, ImageFile


# This program requires LEGO EV3 MicroPython v2.0 or higher.
# Click "Open user guide" on the EV3 extension tab for more information.


# Create your objects here.
ev3 = EV3Brick()
left_motor = Motor(Port.A)
right_motor = Motor(Port.C)
ir_sensor = InfraredSensor(Port.S1)
color_sensor = ColorSensor(Port.S2)

robot = DriveBase(left_motor, right_motor, wheel_diameter=56, axle_track=114)

# Write your program here.
colors = ["FF0000", "FF6D2D", "BA8E23", "00FF00",
          "0000FF", "CBC3E3", "FFFFFF", "000000"]

def read_color():
    r, g, b = color_sensor.rgb()
    hex_color = '{:02X}{:02X}{:02X}'.format(r, g, b)
    return hex_color

def forward(distance_mm):
    robot.straight(distance_mm)

def backward(distance_mm):
    robot.straight(-distance_mm)

def turn_left(angle=90):
    robot.turn(-angle)
    robot.straight(100)

def turn_right(angle=90):
    robot.turn(angle)
    robot.straight(100)

while True:
    distance = ir_sensor.distance()
    detected_color = read_color()
    print("감지 거리:", distance)
    print("감지 색상:", detected_color)

    if distance < 50:
        robot.stop()
        robot.straight(-200)
        turn_right(45)
        continue

    detected_color = read_color()
    print("감지 색상:", detected_color)

    if detected_color == colors[0]:  # 빨강
        robot.stop()
        turn_left()
    elif detected_color == colors[1]:  # 주황
        robot.stop()
        turn_right()
    else:      
        robot.drive(200, 0)

    wait(200)
